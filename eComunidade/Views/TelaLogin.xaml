<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:eComunidade.ViewModels"
             x:Class="eComunidade.Views.TelaLogin"
             Title="Login"
             Background="{AppThemeBinding Light={StaticResource LoginBackground}, Dark={StaticResource LoginBlue}}">

    <ContentPage.BindingContext>
        <vm:LoginViewModel />
    </ContentPage.BindingContext>

    <Grid VerticalOptions="FillAndExpand">

        <Image Source="logo.png"
               VerticalOptions="Start"
               HorizontalOptions="Center"
               Margin="0, 9, 0, 0"
               WidthRequest="100" />

        <Border BackgroundColor="White"
                StrokeShape="RoundRectangle 20"
                Margin="20, 110, 20, 20"
                VerticalOptions="FillAndExpand">

            <VerticalStackLayout Spacing="15" Padding="30">

                <Label Text="Log in" 
                       FontSize="30"
                       FontAttributes="Bold"
                       TextColor="Black"
                       Margin="0, 0, 0, 10" />

                <Border StrokeThickness="1" Stroke="#E0E0E0" StrokeShape="RoundRectangle 5">
                    <Entry Placeholder="Email"
                           Keyboard="Email"
                           Text="{Binding Email}"
                           Margin="5" />
                </Border>

                <Border StrokeThickness="1" Stroke="#E0E0E0" StrokeShape="RoundRectangle 5">
                    <Entry Placeholder="Senha"
                           IsPassword="True"
                           Text="{Binding Senha}"
                           Margin="5" />
                </Border>

                <Button Text="Log in"
                        CornerRadius="5"
                        BackgroundColor="#2A6487"
                        TextColor="White"
                        HeightRequest="50"
                        Margin="0, 20, 0, 0"
                        Command="{Binding EntrarCommand}" />

                <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0, 10, 0, 0">
                    <Label Text="NÃ£o possuiu conta?" TextColor="#444444" FontSize="14" />
                    <Label Text="Cadastre-se." TextColor="#2A6487" FontSize="14">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToRegisterCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>